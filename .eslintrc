{
  "extends": "airbnb-base",
  "env": {
    "jasmine": true,
    "mocha": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": 1,
    "comma-dangle": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-shadow": 0,
    "no-console": 0,
    "no-plusplus": 0,
    "no-unused-expressions": 1,
    "chai-friendly/no-unused-expressions": 2
  },
  "plugins": [
    "chai-friendly"
  ]
}
